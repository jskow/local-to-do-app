<%= form_for(@location) do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Where are you,'+' right now'+'?' %><br>
    <%= f.text_field :address %> <br> <br>

   <div id=form_options>
    <%= f.label 'How much money are you willing to spend?' %> <br>
     <div class="col-xs-3">
     <p> None </p>
     </div>
     <div class="col-xs-6">
     <%= f.range_field :cost, :min=>1, :max=>3, :class=>"slide" %>
     </div>
     <div class="col-xs-3">
     <p> A lot </p>
     </div> <br>

    <%= f.label 'How many people are with you?' %> <br>
     <div class="col-xs-3">
     <p> A lot </p>
     </div>
     <div class="col-xs-6">
     <%= f.range_field :group_size, :min=>1, :max=>3, :class=>"slide" %>
     </div>
     <div class="col-xs-3">
     <p> A couple </p>
     </div> <br>

    <%= f.label 'What ages?' %> <br>
     <div class="col-xs-3">
     <p> Family friendly</p>
     </div>
     <div class="col-xs-6">
     <%= f.range_field :age, :min=>1, :max=>3, :class=>"slide" %>
     </div>
     <div class="col-xs-3">
     <p> 21 </p>
     </div> <br>
   </div>
  </div>

  <div class="actions">
    <%= f.submit 'Submit Location', :class => 'btn-large btn-success' %>
  </div>
<% end %>
